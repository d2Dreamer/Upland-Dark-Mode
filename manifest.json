// manifest.json

{
    "manifest_version": 2,
    "name": "Upland Dark Mode",
    "version": "1.0",
    "description": "Enable dark mode for play.upland.me.",
    "permissions": [
      "activeTab",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": ["https://play.upland.me/*"],
        "js": ["content_script.js"]
      }
    ],
    "browser_action": {
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "manifest_version": 2
  }